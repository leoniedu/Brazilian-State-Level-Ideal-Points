model {
  sdp <- 1000
  for (i in 1:n.rows) {
        y[i] ~ dnorm(xb[i], tau.y)
   	xb[i] <- b0[legis[i]] + b1[legis[i]] * party.raw[party.i[i]]
  }
  sigma.y ~ dunif(0,sdp)
  tau.y <- pow(sigma.y,-2)
  for (j in 1:n.party) {
    party.raw[j] ~ dnorm(0,pow(sdp,-2))
  } 	     
  party <- (party.raw-mean(party.raw))/(sd(party.raw))
  for (j in 1:n.legis) {
    b0[j] ~ dnorm(mu.0, tau.0)
    b1[j] ~ dnorm(mu.1, tau.1)
  }
  sigma.0 ~ dunif(0, sdp)
  tau.0 <- pow(sigma.0,-2)
  sigma.1 ~ dunif(0, sdp)
  tau.1 <- pow(sigma.1,-2)
  mu.0 ~ dnorm(0, pow(sdp, -2))
  mu.1 ~ dnorm(0, pow(sdp, -2))
}


